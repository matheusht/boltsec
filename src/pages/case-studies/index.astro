---
import Layout from '../../layouts/Layout.astro';
import { TieredCaseStudies } from '../../components/TieredCaseStudies';
import { caseStudies } from '../../data/caseStudies';
---

<Layout>
  <div class="min-h-screen bg-[#101010] text-white pt-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold mb-6">Customer Success Stories</h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          See how leading companies are transforming their security with our AI-assisted penetration testing
        </p>
      </div>

      <div class="mb-16">
        <TieredCaseStudies client:load caseStudies={caseStudies} />
      </div>
    </div>
  </div>
</Layout>